BUILDROOT_HOME=/home/adesokanphilip/buildroot

CC=$(BUILDROOT_HOME)/output/host/usr/bin/arm-linux-gcc
CFLAGS=--sysroot=$(BUILDROOT_HOME)/output/staging
INCLUDES=
LFLAGS=

LIBS=-lcurl -lc -lz -lssl -lcrypto -lrt -lpthread -ldl

SRC=iot_client.c
OBJ=$(SRC:.c=.o)
MAIN=iot_client

RM=rm -rf

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

$(MAIN): $(OBJ)
	$(CC) $(CFLAGS) $(INCLUDES) -o $(MAIN) $(OBJ) $(LFLAGS) $(LIBS)

all: $(MAIN)

clean: 
	$(RM) $(MAIN) *.o *~
